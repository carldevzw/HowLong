<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LauncherActivity">

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvCampusPoint"
        android:text="@string/welcome_to"
        android:textSize="20sp"
        android:textColor="@color/goldenrod"
        android:layout_marginBottom="12dp"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/tvCampusPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/campus_connect"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/maroon_black"
        android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/btnGetStarted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_below="@+id/tvCampusPoint"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="@string/get_started" />

</RelativeLayout>